<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#f0f0f0">

    <!-- TextView for Customer ID Label -->
    <TextView
        android:id="@+id/customerIdLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mã Khách Hàng:"
        android:textSize="18sp"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <!-- TextView for Displaying Customer ID -->
    <TextView
        android:id="@+id/customerIdValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123456"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#3F51B5"
        app:layout_constraintTop_toBottomOf="@+id/customerIdLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Button to View Personal Information -->
    <Button
        android:id="@+id/viewPersonalInfoButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Xem Thông Tin Cá Nhân"
        android:textSize="18sp"
        android:padding="12dp"
        android:backgroundTint="#3F51B5"
        android:textColor="#ffffff"
        app:layout_constraintTop_toBottomOf="@+id/customerIdValue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp" />

    <!-- Button to Search for Flights -->
    <Button
        android:id="@+id/searchFlightsButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tìm Kiếm Chuyến Bay"
        android:textSize="18sp"
        android:padding="12dp"
        android:backgroundTint="#3F51B5"
        android:textColor="#ffffff"
        app:layout_constraintTop_toBottomOf="@+id/viewPersonalInfoButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
